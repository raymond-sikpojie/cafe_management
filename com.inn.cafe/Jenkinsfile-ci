pipeline {
    agent any

    tools {
        maven 'maven_399'
    }

    environment {
        SECRETS = credentials('application-secrets')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Echo version') {
            steps {
                sh 'echo Print Maven Version'
                sh 'mvn -version'
            }
        }

        stage('Build') {
            steps {
                dir('com.inn.cafe') {
                    sh "mvn clean verify -DskipTests=true"
                }

            }
        }

        stage('Unit Test') {
            steps {
                dir('com.inn.cafe') {
                    sh "mvn test"
                }
            }
        }
    }

}