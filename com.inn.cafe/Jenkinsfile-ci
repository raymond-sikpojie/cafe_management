pipeline {
    agent any

    tools {
        maven 'maven_399'
    }

    environment {
        SECRETS = credentials('application-secrets')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Echo version') {
            steps {
                sh 'echo Print Maven Version'
                sh 'mvn -version'
            }
        }

        stage('Setup Application Properties') {
            steps {
                dir('com.inn.cafe') {
                    sh '''
                        echo "Current user:"
                        whoami
                        echo "Directory permissions before:"
                        ls -la

                        # Create directories if they don't exist
                        mkdir -p target/classes

                        # Change ownership of directories to Jenkins user
                        sudo chown -R jenkins:jenkins src/main/resources
                        sudo chown -R jenkins:jenkins target

                        # Set permissions
                        chmod -R 755 src/main/resources
                        chmod -R 755 target

                        # Copy the secrets file
                        cp $SECRETS src/main/resources/application-secrets.properties
                        chmod 644 src/main/resources/application-secrets.properties

                        echo "Directory permissions after:"
                        ls -la src/main/resources
                    '''
                }

            }
        }

        stage('Build') {
            steps {
                dir('com.inn.cafe') {
                    sh "mvn clean verify -DskipTests=true"
                }

            }
        }

        stage('Unit Test') {
            steps {
                dir('com.inn.cafe') {
                    sh "mvn test"
                }
            }
        }
    }

    post {
        always {
            // Clean up secrets after build
            sh 'rm -f src/main/resources/application-secrets.properties'
        }
    }

}