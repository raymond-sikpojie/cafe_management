pipeline {
    agent any

    tools {
        maven 'maven_399'
    }

    environment {
        SECRETS = credentials('application-secrets')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Echo version') {
            steps {
                sh 'echo Print Maven Version'
                sh 'mvn -version'
            }
        }

        stage('Setup Application Properties') {
            steps {
                dir('com.inn.cafe') {
                    sh '''
                        # Create directories if they don't exist
                        mkdir -p src/main/resources
                        mkdir -p target/classes

                        # Set permissions as current user
                        chmod 755 src/main/resources
                        chmod 755 target/classes

                        # Copy the secrets file
                        cp "$SECRETS" src/main/resources/application-secrets.properties

                        # Verify the file was copied
                        ls -la src/main/resources/application-secrets.properties
                    '''
                }

            }
        }

        stage('Build') {
            steps {
                dir('com.inn.cafe') {
                    sh "mvn clean verify -DskipTests=true"
                }

            }
        }

        stage('Unit Test') {
            steps {
                dir('com.inn.cafe') {
                    sh "mvn test"
                }
            }
        }
    }

    post {
        always {
            // Clean up secrets after build
            sh 'rm -f src/main/resources/application-secrets.properties'
        }
    }

}